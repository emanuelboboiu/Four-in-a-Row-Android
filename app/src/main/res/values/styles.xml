<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="style_bottom_buttons" parent="android:Widget.Holo.Light.Button">
        <item name="android:textSize">@dimen/bottom_buttons_size</item>
        <item name="android:textColor">@color/btTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_check_boxes_in_settings">
        <item name="android:textColor">@color/btTextColor</item>
        <item name="android:textSize">@dimen/buttons_size</item>
    </style>

    <style name="llActionBarForTVButtonsStyle" parent="android:Widget.Holo.Light.Button">
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/ll_action_bar_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyAlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

</resources>